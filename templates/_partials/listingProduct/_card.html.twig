                <img src="{{ vich_uploader_asset(product.image) }}" alt="{{ product.name }}">
            {% else %}
                <img src="https://placehold.co/600x400" alt="{{ product.name }}">
            {% endif %}
        </article>
        <article class="AlignCenter FlexCol JustifyCenter containerInfoProduct">
            <p>{{ product.name }}</p>
            <p>{{ product.description }}</p>
