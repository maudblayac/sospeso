<header class="headerNav">
    <nav class="FlexRow AlignCenter FlexBetween">
        <!-- Nav Left -->
        <article class="navLeft">
            <!-- Mobile Only -->
            <div class="mobileOnly iconeLeft FlexRow AlignCenter FlexAround">
                <input type="checkbox" id="burger-toggle">
                <label for="burger-toggle" class="burger-icon">
                    <span></span>
                    <span></span>
                    <span></span>
                </label>
                <img class="searchIcon" alt="search" src="{{ asset('/images/navbar/search.svg') }}">
                <div class="burger-menu-overlay">
                    <div class="burger-menu-content">
                        <div class="menu-header FlexBetween">
                            <span>Menu</span>
                            <label for="burger-toggle" class="close-icon">×</label>
                        </div>
                        <ul>
                                <li><a href="{{ path('app_privacy_policy') }}">Politique de Confidentialité</a></li>
                                <li><a href="{{ path('app_legal_mentions') }}">Mentions légales</a></li>
                                <li><a href="{{ path('app_terms_of_use') }}">Conditions Générales d'Utilisation</a></li>
                                <li><a href="{{ path('app_terms_of_sale') }}">Conditions Générales de Vente</a></li>
                            </ul>
                        <hr>
                        <ul>
                            <li><a href="{{ path('app_about_us') }}">A propos de Sospeso</a></li>
                        </ul>
                        <div class="menu-footer">
                            <a href="#"><img src="{{ asset('/images/navbar/location.svg') }}" alt="icon"> Trouver un magasin</a>
                            <a href="{{ path('app_login') }}"><img src="{{ asset('/images/navbar/profile.svg') }}" alt="icon"> Compte</a>
                            <a href="#contact"><img src="{{ asset('/images/navbar/message.svg') }}" alt="icon"> Nous contacter</a>
                        </div>
                    </div>
                </div>
                {# <img class="searchIcon" alt="search" src="{{ asset('/images/navbar/search.svg') }}"> #}
            </div>
            <!-- Desktop Only -->
            <div class="desktopOnly FlexRow AlignCenter FlexBetween navLeftDesktop">
                <div class="menuContainer FlexRow AlignCenter">
                    <img class="menuIcon" alt="menu" src="{{ asset('/images/navbar/filtre.svg') }}">
                    <span class="menuText">Menu</span>
                </div>
                <form class="searchContainer FlexRow AlignCenter">
                    <img class="searchIcon" alt="search" src="{{ asset('/images/navbar/search.svg') }}">
                    <input type="text" class="searchInput" placeholder="recherche">
                </form>
            </div>
        </article>

        <!-- Nav Center -->
        <article class="navCenter">
            <a href="{{ path('app_home') }}">
                <img class="logo" alt="logo" src="{{ asset('/images/navbar/logo.svg') }}">
            </a>
        </article>

        <!-- Nav Right -->
        <article class="navRight">
            <!-- Desktop Only -->
            <div class="desktopOnly topLinks FlexRow AlignCenter FlexBetween">
                <a href="#">Trouver un restaurant</a>
                <a href="#">Faire un don</a>
                <a href="#">Nous contacter</a>
            </div>
            <!-- Compte et Panier -->
            <div class="accountCart iconeLeft FlexRow AlignCenter">
                {% if is_granted("ROLE_ADMIN") %}
                    <a href="{{ path('admin_dashboard') }}" class="account FlexRow AlignCenter">
                        <img src="{{ asset('/images/navbar/profile.svg') }}" class="icon" alt="admin">
                        <span class="desktopOnly">Admin</span>
                    </a>
                {% elseif is_granted("ROLE_RESTAURANT") %}
                    <a href="{{ path('app_dashboard_restaurant_home') }}" class="account FlexRow AlignCenter">
                        <img src="{{ asset('/images/navbar/profile.svg') }}" class="icon" alt="restaurant">
                        <span class="desktopOnly">Dashboard</span>
                    </a>
                {% elseif is_granted("ROLE_USER") %}
                    <a href="{{ path('app_user_profile_index') }}" class="account FlexRow AlignCenter">
                        <img src="{{ asset('/images/navbar/profile.svg') }}" class="icon" alt="user">
                        <span class="desktopOnly">Profil</span>
                    </a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="account FlexRow AlignCenter">
                        <img src="{{ asset('/images/navbar/profile.svg') }}" class="icon" alt="profile">
                        <span class="desktopOnly">Compte</span>
                    </a>
                {% endif %}
                    <a href="" class"AlignCenter test">
                        <img src="{{ asset('/images/navbar/cart.svg') }}" class="icon" alt="cart">
                        <span class="desktopOnly">Panier</span>
                    </a>
            </div>
        </article>
    </nav>
</header>
