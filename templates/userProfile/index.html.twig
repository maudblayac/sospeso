{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profile Settings</h1>

    {{ form_start(form) }}
        <div class="form-row">
            <div class="col">{{ form_row(form.firstname) }}</div>
            <div class="col">{{ form_row(form.lastname) }}</div>
        </div>

        <div class="form-row">
            <div class="col">{{ form_row(form.dateOfBirth) }}</div>
            <div class="col">{{ form_row(form.phoneNumber) }}</div>
        </div>

        <div class="form-row">
            <div class="col">{{ form_row(form.address) }}</div>
            <div class="col">{{ form_row(form.city) }}</div>
        </div>

        <div class="form-row">
            <div class="col">{{ form_row(form.country) }}</div>
            <div class="col">{{ form_row(form.postalCode) }}</div>
        </div>

        <button type="submit" class="btn btn-primary">Save Profile</button>
    {{ form_end(form) }}

    <form method="post" action="{{ path('app_user_profile_delete') }}" onsubmit="return confirm('Vous êtes sûre de vouloir supprimer votre profil ?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete-profile') }}">
        <button class="btn btn-danger">Delete Profile</button>
    </form>
{% endblock %}
