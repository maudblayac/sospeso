{% extends 'admin/layout.html.twig' %}

<h2>Annonces de restaurants à valider</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom du Restaurant</th>
            <th>Propriétaire</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for restaurant in restaurants %}
            {% if not restaurant.isApproved %}
                <tr>
                    <td>{{ restaurant.id }}</td>
                    <td>{{ restaurant.title }}</td>
                    <td>{{ restaurant.user.email }}</td>
                    <td>{{ restaurant.isApproved ? 'Approuvé' : 'En attente' }}</td>
                    <td>
                        <form action="{{ path('admin_restaurant_approve', {'id': restaurant.id}) }}" method="POST">
                            <button type="submit">Approuver</button>
                        </form>
                    </td>
                </tr>
            {% endif %}
        {% endfor %}
    </tbody>
</table>
