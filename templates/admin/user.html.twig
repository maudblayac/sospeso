{# templates/admin/dashboard.html.twig #}
{% extends 'admin/layout.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
<h1>Tableau de bord Administrateur</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>RÃ´le</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | join(', ') }}</td>
                <td>{{ user.status.value }}</td>
                <td>
                    <form action="{{ path('admin_user_change_status', {'id': user.id}) }}" method="POST">
                        <select name="status">
                            {% for status in constant('App\\Enum\\UserStatus') %}
                                <option value="{{ status.value }}" {% if status == user.status %}selected{% endif %}>
                                    {{ status.value }}
                                </option>
                            {% endfor %}
                        </select>
                        <button type="submit">Changer le statut</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
